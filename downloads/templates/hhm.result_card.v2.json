{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HHM Result Card v2",
  "type": "object",
  "required": [
    "schema",
    "bundle_version",
    "env_lock",
    "dataset_id",
    "manifest_hash",
    "operators",
    "params",
    "seed",
    "metrics",
    "nulls",
    "ci",
    "thresholds_version",
    "decisions",
    "created_at",
    "run_id"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "pattern": "^hhm\\.result_card\\.v2$"
    },
    "bundle_version": {
      "type": "string"
    },
    "env_lock": {
      "type": "string",
      "description": "Hash or ID of the environment lock file"
    },
    "dataset_id": {
      "type": "string"
    },
    "manifest_hash": {
      "type": "string"
    },
    "operators": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "params": {
      "type": "object",
      "additionalProperties": true
    },
    "seed": {
      "type": "integer"
    },
    "metrics": {
      "type": "object",
      "additionalProperties": { "type": "number" }
    },
    "nulls": {
      "type": "object",
      "required": ["method", "n"],
      "properties": {
        "method": {
          "type": "array",
          "items": { "type": "string" }
        },
        "n": { "type": "integer" }
      }
    },
    "ci": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": { "type": "number" },
        "minItems": 2,
        "maxItems": 2
      }
    },
    "thresholds_version": {
      "type": "string"
    },
    "decisions": {
      "type": "object",
      "additionalProperties": { "type": "boolean" }
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "run_id": {
      "type": "string"
    }
  }
}